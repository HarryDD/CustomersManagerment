@model CustomersManagement.Models.CustomersViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers(@Html.DisplayTextFor(model => model.CustomerNumber))</h2>

<h2>
    @Html.LabelFor(m => m.SelectedCustomer.FirstName)
</h2>
<P>
    @Html.ActionLink("Create New", "Create")
</P>

<table class="table-striped table">
    <tr>
        <th>@Html.LabelFor(m => m.SelectedCustomer.Id)</th>
        <th>@Html.LabelFor(m => m.SelectedCustomer.FirstName)</th>
        <th>@Html.LabelFor(m => m.SelectedCustomer.LastName)</th>
        <th>@Html.LabelFor(m => m.SelectedCustomer.Address)</th>
        <th>@Html.LabelFor(m => m.SelectedCustomer.Mobile)</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Customers)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Address</td>
            <td>@item.Mobile</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>    
    }

</table>